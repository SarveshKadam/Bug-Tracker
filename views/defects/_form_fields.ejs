<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Members</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/checkout/">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
    <!-- Custom styles for this template -->
    <link href="/css/member.css" rel="stylesheet">
  </head>
  <body class="bg-light">
    
<div class="container">
  <main>
      </div>
      <div class="col-md-7 col-lg-8 mt-3">
       
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="number" class="form-label">Number</label>
              <input type="text" class="form-control" id="number" name="number" value="<%= defect.number %>" disabled>
            </div>

            <div class="col-sm-6">
              <label for="reportedBy" class="form-label">Reported By</label>
              <select id="reportedBy" class="form-control" name="reportedBy" required>
                <option selected>--none--</option>
                <option>Mike</option>
            </select>
              <div class="invalid-feedback">
                Valid reported member name is required.
              </div>
            </div>

            <div class="col-sm-6">
                <label for="priority" class="form-label">Priority</label>
                <select id="priority" class="form-control" name="priority" required>
                    <option value="<%= defect.priority %>">1</option>
                    <option value="<%= defect.priority %>" selected>2</option>
                    <option value="<%= defect.priority %>">3</option>
                    <option value="<%= defect.priority %>">4</option>
                </select>
                <div class="invalid-feedback">
                  Valid reported member name is required.
                </div>
              </div>

            <div class="col-sm-6">
              <label for="assignedTo" class="form-label">Assigned to</label>
              <select id="assignedTo" class="form-control" name="assignedTo" required>
                <option selected>--none--</option>
                <option>Mike</option>
            </select>
              <div class="invalid-feedback">
                Please enter the person to whon the defect should be assigned to.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="state" class="form-label">State</label>
              <select id="state" class="form-control" name="state" required>
                <option value="<%= defect.state %>" selected>Assigned</option>
                <option value="<%= defect.state %>">Work in progress</option>
                <option value="<%= defect.state %>">Resolved</option>
                <option value="<%= defect.state %>">Canceled</option>
            </select>
            </div>

            <div class="col-sm-6">
              <label for="points" class="form-label">Points<span class="text-muted">(Optional)</span></label>
              <input type="number" class="form-control" id="address"  name="points" value="<%= defect.points %>" >
              <div class="invalid-feedback">
                Please enter your position.
              </div>
            </div>
            <div class="col-sm-6">
              <label for="environment" class="form-label">Environment</label>
              <select id="environment" class="form-control" name="environment" required>
                <option value="<%= defect.environment %>" selected>Dev</option>
                <option value="<%= defect.environment %>">QA</option>
                <option value="<%= defect.environment %>">UAT</option>
                <option value="<%= defect.environment %>">Prod</option>
                </select>
              <div class="invalid-feedback">
                Please enter your environment.
              </div>
            </div>
            <div class="col-sm-6">
                <label for="product" class="form-label">Product</label>
                <input type="text" class="form-control" id="address" name="product" value="<%= defect.product %> " required>
                <div class="invalid-feedback">
                  Please enter your product.
                </div>
            </div>
            
            <div class="col-12">
                <label for="shortDescription" class="form-label">Short Description </label>
                <input type="text" class="form-control"  name="shortDescription" value="<%= defect.shortDescription %>" required>
                <div class="invalid-feedback">
                  Please enter a valid short description.
            </div>
            
            <div class="col-12">
                <label for="description" class="form-label">Description </label>
                <textarea name="description" class="form-control" rows="3"><%= defect.description %></textarea>
            </div>

        <hr class="my-4">
        <div>
            <button class="btn btn-primary btn-lg mt-3" type="submit">Save</button>
            <a href="/members" class="btn btn-primary btn-lg mt-3">Cancel</a>
            <a href="#" class="btn btn-primary btn-lg mt-3">Delete</a>
        </div>
      </div>
    </div>
  </main>
</div>


<script src="/js/member.js"></script>
  </body>
</html>
